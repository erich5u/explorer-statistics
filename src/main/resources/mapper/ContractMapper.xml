<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.ontio.explorer.statistics.mapper.ContractMapper">
    <resultMap id="BaseResultMap" type="com.github.ontio.explorer.statistics.model.Contract">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="contract_hash" jdbcType="VARCHAR" property="contractHash"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="INTEGER" property="createTime"/>
        <result column="update_time" jdbcType="INTEGER" property="updateTime"/>
        <result column="audit_flag" jdbcType="INTEGER" property="auditFlag"/>
        <result column="contact_info" jdbcType="VARCHAR" property="contactInfo"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="logo" jdbcType="VARCHAR" property="logo"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
        <result column="address_count" jdbcType="INTEGER" property="addressCount"/>
        <result column="tx_count" jdbcType="INTEGER" property="txCount"/>
        <result column="ont_sum" jdbcType="DECIMAL" property="ontSum"/>
        <result column="ong_sum" jdbcType="DECIMAL" property="ongSum"/>
        <result column="token_sum" jdbcType="VARCHAR" property="tokenSum"/>
        <result column="category" jdbcType="VARCHAR" property="category"/>
        <result column="dapp_name" jdbcType="VARCHAR" property="dappName"/>
        <result column="dappstore_flag" jdbcType="INTEGER" property="dappstoreFlag"/>
        <result column="total_reward" jdbcType="DECIMAL" property="totalReward"/>
        <result column="lastweek_reward" jdbcType="DECIMAL" property="lastweekReward"/>
        <result column="abi" jdbcType="LONGVARCHAR" property="abi"/>
        <result column="code" jdbcType="LONGVARCHAR" property="code"/>
        <result column="source_code" jdbcType="LONGVARCHAR" property="sourceCode"/>
    </resultMap>


    <sql id="detailColumns">
        contract_hash as contractHash,
    name as name,
    create_time as createTime,
    update_time as updateTime,
    audit_flag as auditFlag,
    contact_info as contactInfo,
    description as description,
    type as type,
    logo as logo,
    creator as creator,
    address_count as addressCount,
    tx_count as txCount,
    ont_sum as ontSum,
    ong_sum as ongSum,
    token_sum as tokenSum,
    category as category,
    dapp_name as dappName,
    dappstore_flag as dappstoreFlag,
    total_reward as totalReward,
    lastweek_reward as lastweekReward,
    abi as abi,
    code as code,
    source_code as sourceCode
    </sql>

    <!--
    self-defined SQL
    -->
    <select id="selectAllApprovedContract" resultType="com.github.ontio.explorer.statistics.model.Contract" useCache="false">
        select
        <include refid="detailColumns"/>
        from tbl_contract
        where audit_flag = 1
        order by create_time DESC
    </select>

    <select id="findContractType" resultType="com.github.ontio.explorer.statistics.aggregate.model.ContractType">
        SELECT c.contract_hash,
            if(oep4.contract_hash IS NULL, FALSE, TRUE) AS oep4,
            if(oep5.contract_hash IS NULL, FALSE, TRUE) AS oep5,
            if(oep8.contract_hash IS NULL, FALSE, TRUE) AS oep8
        FROM tbl_contract c
                 LEFT OUTER JOIN tbl_oep4 oep4 ON oep4.contract_hash = c.contract_hash
                 LEFT OUTER JOIN tbl_oep5 oep5 ON oep5.contract_hash = c.contract_hash
                 LEFT OUTER JOIN tbl_oep8 oep8 ON oep8.contract_hash = c.contract_hash
        WHERE c.contract_hash = #{contractHash}
        LIMIT 1;
    </select>
</mapper>